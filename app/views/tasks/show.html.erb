<div class="container">
  <p><h1><%= @task.title %></h1></p>
  <p><%= @task.details %></p>
  <%= link_to "Tasks", tasks_path %>
  <p><%= link_to 'Edit', edit_task_path(@task)  %></p>
  <p><%= link_to 'Destroy', task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{@task.title}?" }  %></p>
</div>
